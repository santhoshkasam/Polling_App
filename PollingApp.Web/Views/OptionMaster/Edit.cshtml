
@model PollingApp.Models.OptionMaster

@using (Ajax.BeginForm("Edit", new AjaxOptions() { }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div id="entityModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal" aria-hidden="true">×</a>
                    <h3 id="myModalLabel">@Html.Raw("Update Option")</h3>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(model => model.OptionId)
                    <div class="span12">
                        @Html.LabelFor(model => model.OptionCode)
                        @Html.TextBoxFor(model => model.OptionCode)
                        @Html.ValidationMessageFor(model => model.OptionCode)
                    </div>
                    <div class="span12">
                        @Html.LabelFor(model => model.OptionName)
                        @Html.EditorFor(model => model.OptionName)
                        @Html.ValidationMessageFor(model => model.OptionName)
                    </div>
                </div>
                <div class="modal-footer">
                    <input class="btn btn-primary" type="button" value="Save" OnClick="UpdateDetails()" />
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

