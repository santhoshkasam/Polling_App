@model IEnumerable<PollingApp.Models.CategoryMaster>


<div id="entityData">
    <table class="row-border compact stripe hover dataTable" id="entityTable">
        <thead>
            <tr>
                <th>
                    <span id="FirstName">@Html.DisplayNameFor(model => model.CategoryCode)</span>
                </th>
                <th>
                    <span id="FirstName">@Html.DisplayNameFor(model => model.CategoryName)</span>
                </th>
                <th>
                    <span id="Actions">@Html.Raw("Actions")</span>
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>

                    @Ajax.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new AjaxOptions() { UpdateTargetId = "entityContainer", HttpMethod = "Get", OnComplete = "ShowEntityModal" })
                    <span>|</span>

                    @Ajax.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new AjaxOptions() { UpdateTargetId = "entityContainer", HttpMethod = "Get", OnComplete = "ShowEntityModal" })
                    <span>|</span>

                    @Ajax.ActionLink("Details", "Details", new { id = item.CategoryId }, new AjaxOptions() { UpdateTargetId = "entityContainer", HttpMethod = "Get", OnComplete = "ShowEntityModal" })
                </td>
            </tr>
        }
    </table>
</div>


