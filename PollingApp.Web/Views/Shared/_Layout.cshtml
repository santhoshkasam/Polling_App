<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - My ASP.NET Application</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
  <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
  <style>
  </style>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        @Html.ActionLink("Polling", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
      </div>
      <div class="collapse navbar-collapse" >
        <ul class="nav navbar-nav">
          <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Masters
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>@Html.ActionLink("Category", "Index", "CategoryMaster")</li>
              <li>@Html.ActionLink("Topic", "Index", "TopicMaster")</li>
              <li>@Html.ActionLink("Option", "Index", "OptionMaster")</li>
            </ul>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              Mapping
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>@Html.ActionLink("Category Topic", "Index", "CategoryTopicMapping")</li>
              <li>@Html.ActionLink("Topic Option", "Index", "TopicOptionMapping")</li>
            </ul>
          </li>
          <li>
            @Html.ActionLink("Submit Poll", "Index", "Polling")
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container body-content">
    <div id="divMessage" class="span12 divMessage"></div>
    @RenderBody()
  </div>

  <div style="padding-top:20px">
    <footer>
      <p style="padding-top:10px">&copy; @DateTime.Now.Year - Thomson Reuters</p>
    </footer>
  </div>
  <div id="loading-block" style="display:none">
    <div class="modal-backdrop fade in" style="z-index: 1055"></div>
    <div class="loader" style="z-index: 1056"></div>
  </div>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @Scripts.Render("~/bundles/basejs")
  @*<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>*@
  <script src="~/Scripts/app.js"></script>
  @RenderSection("scripts", required: false)
</body>
</html>
