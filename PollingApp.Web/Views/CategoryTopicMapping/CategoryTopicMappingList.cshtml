@model IEnumerable<PollingApp.Models.CategoryTopicMapping>


<div id="entityData">
    <table class="row-border compact stripe hover dataTable" id="entityTable">
        <thead>
            <tr>
                <th>
                    <span id="FirstName">@Html.DisplayNameFor(model => model.CategoryMaster.CategoryId)</span>
                </th>
                <th>
                    <span id="FirstName">@Html.DisplayNameFor(model => model.TopicMaster.TopicName)</span>
                </th>
                <th>
                    <span id="Actions">@Html.Raw("Actions")</span>
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryMaster.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TopicMaster.TopicName)
                </td>
                <td>

                    @Ajax.ActionLink("Edit", "Edit", new { id = item.CategoryTopicMappingId }, new AjaxOptions() { UpdateTargetId = "entityContainer", HttpMethod = "Get", OnComplete = "ShowEntityModal" })
                    <span>|</span>

                    @Ajax.ActionLink("Delete", "Delete", new { id = item.CategoryTopicMappingId }, new AjaxOptions() { UpdateTargetId = "entityContainer", HttpMethod = "Get", OnComplete = "ShowEntityModal" })
                    <span>|</span>

                    @Ajax.ActionLink("Details", "Details", new { id = item.CategoryTopicMappingId }, new AjaxOptions() { UpdateTargetId = "entityContainer", HttpMethod = "Get", OnComplete = "ShowEntityModal" })
                </td>
            </tr>
        }
    </table>
</div>

